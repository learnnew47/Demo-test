pipeline {
    agent any
    stages {
        stage('Build Application') {
            steps {
                sh 'cp /var/lib/jenkins/workspace/Maven project/target/docker-demo.jar'
            }
 
        Stage('Create Tomcat Docker Image'){
            steps {
                sh "docker build . -t tomcatsamplewebapp:${env.BUILD_ID}"
            }
        }
 
    }
}
